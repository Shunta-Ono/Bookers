<h1>Editing Book</h1>
<% if @book.errors.any? %>
<div class="error-message">
  <p class="error-message-lead"><strong><%= @book.errors.count %> errors prohibited this book from being saved:</p></strong>
  <ul class="error-message-details">
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_for(@book, url:book_path(@book.id)) do |f| %>
<lavel>Title</lavel>
<div class="field"><%= f.text_field :title %></div>
<lavel>Body</lavel>
<div class="field"><%= f.text_area :body %></div>
<div class="actions"><%= f.submit 'Update Book' %></div>
<% end %>
<%=link_to 'Show',book_path(@book.id), :style => "color:#000000" %>
<span>|</span>
<%=link_to 'Back',books_path, :style => "color:#000000" %>