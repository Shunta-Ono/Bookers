<% if flash[:notice] %>
<p class="success-message"><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book, :style => "color: #000000" %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id), :style => "color: #000000" %></td>
      <td><%= link_to 'Destroy', book_path(book.id), :style => "color: #000000", method: :delete, "data-confirm" => "本当に削除しますか?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<h2>New book</h2>
<%= form_for(@book, url: books_path) do |f| %>
<% if @book.errors.any? %>
<div class="error-message">
  <p class="error-message-lead"><strong><%= @book.errors.count %> errors prohibited this book from being saved:</p></strong>
  <ul class="error-message-details">
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>
<div class="actions"><%= f.submit 'Create Book' %></div>
<% end %>